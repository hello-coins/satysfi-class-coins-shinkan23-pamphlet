  let-mutable ref-float-boxes <- []

  let height-of-float-boxes pageno =
    %    let () = display-message `get height` in
        (!ref-float-boxes) |> List.fold-left (fun h (pn, bb) -> (
          if pn < pageno then h +' (get-natural-length bb) else h
